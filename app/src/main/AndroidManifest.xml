<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.jjnunogarcia.offerchecker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/OfferChecker"
        android:name=".OfferCheckerApplication">
        <activity
            android:name=".activities.SearchActivity"
            android:label="@string/activity_search_action_bar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ResultsActivity"
            android:label="@string/activity_results_action_bar" />
        <activity
            android:name=".activities.OfferDetailActivity"
            android:label="@string/activity_offer_detail_action_bar" />
        <activity
            android:name=".activities.DisplayImageActivity"
            android:label="@string/activity_display_image_action_bar" />
    </application>

</manifest>
